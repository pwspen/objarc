[Unit]
Description=Arc FastAPI App
After=network.target

[Service]
Type=notify
User=www-data
WorkingDirectory=/var/www/arc
Environment="PATH=/var/www/arc/.venv/bin"
ExecStart=/var/www/arc/.venv/bin/uvicorn api:app --host 127.0.0.1 --port 8000

Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target